{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@actions/*": ["./src/actions/*"],
      "@components/*": ["./src/app/components/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@hooks/*": ["./src/app/hooks/*"],
      "@images/*": ["./src/app/images/*"],
      "@types": ["./src/app/types"],
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/helpers/memory.js"
  ],
  "exclude": ["node_modules"]
}
